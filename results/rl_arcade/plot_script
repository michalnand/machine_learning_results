set   autoscale                        # scale axes automatically
unset log                              # remove any log-scaling
unset label                            # remove any previous labels
set xtic auto                         	# set xtics automatically
set ytic auto                         # set ytics automatically
set ztic auto

set key right bottom

set grid ytics lt 0.1 lw 0.1 lc rgb "#bbbbbb"
set grid xtics lt 0.1 lw 0.1 lc rgb "#bbbbbb"

set terminal png size 1024,768 enhanced font "Helvetica,20"


set xlabel "iteration x 1000"
set ylabel "best action probability"

set yrange [0.0:1.0]

set xtic 20

set output 'training_progress.png'
plot  'hnn_progress/training_0.log' using 5 every ::100 title "AE+FNN - sparse" with lines lw 2.0,\
      'hnn_progress/training_5.log' using 5 every ::100 title "AE+FNN" with lines lw 2.0,\
      'fnn_progress/training_0.log' using 5 every ::::200 title "FNN - sparse" with lines lw 2.0,\
      'fnn_progress/training_5.log' using 5 every ::::200 title "FNN" with lines lw 2.0,\




set output 'testing_progress.png'
plot  'hnn_progress/testing_0.log' using 5 title "AE+FNN - sprase" with lines lw 2.0 ,\
      'hnn_progress/testing_5.log' using 5 title "AE+FNN" with lines lw 2.0 ,\
      'fnn_progress/testing_0.log' using 5 title "FNN - sparse" with lines lw 2.0 ,\
      'fnn_progress/testing_5.log' using 5 title "FNN" with lines lw 2.0,\

