set   autoscale                        # scale axes automatically
unset log                              # remove any log-scaling
unset label                            # remove any previous labels
set xtic auto                         	# set xtics automatically
set ytic auto                         # set ytics automatically
set ztic auto


set grid ytics lt 0.1 lw 0.1 lc rgb "#bbbbbb"
set grid xtics lt 0.1 lw 0.1 lc rgb "#bbbbbb"

#set terminal png size 2048,1356 enhanced font "Helvetica,20"
set terminal png size 1024,768 enhanced font "Helvetica,20"

set key right top


set xlabel "weight value"
set ylabel "count"

set xrange [-0.9:0.9]


set output 'layer_1_histogram.png'
plot 'layer_1_histogram.log' using 1:2 notitle with boxes


set output 'layer_2_histogram.png'
plot 'layer_2_histogram.log' using 1:2 notitle with boxes



set output 'layer_3_histogram.png'
plot 'layer_3_histogram.log' using 1:2 notitle with boxes


set output 'layer_4_histogram.png'
plot 'layer_4_histogram.log' using 1:2 notitle with boxes
